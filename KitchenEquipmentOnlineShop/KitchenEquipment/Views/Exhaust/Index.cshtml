@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<KitchenEquipment.Models.ExhaustHoodViewModel>

<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Вытяжки: <b>Модерн</b> </h2>
            </div>
            <div class="col-sm-6">
                <a href="@Url.Action("Create", "Exhaust")" class="btn btn-success viewDialog" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Добавить</span></a>
                @*<a href="#deleteModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Удалить</span></a>*@
            </div>
        </div>
    </div>
    <table class="table table-striped table-hover table-condensed table-sm">
        <thead>
            <tr>
                <th>Изображение</th>
                <th>@Html.DropDownList("CompanyName", ViewBag.Companies as SelectList, "Фирма", new { @class = "btn btn-light font-weight-bold", onchange = "CallChangefunc(this.value)" })</th>
                <th>Название</th>
                <th>Ширина</th>
                <th>Цвет</th>
                <th>Цена</th>
                <th class="text-center">Описание</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var key in Model)
            {
                <tr>
                    <td>
                        @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                  + Convert.ToBase64String(key.Image) + "\" />")
                    </td>
                    <td>@key.CompanyName</td>
                    <td>@key.Name</td>
                    <td>@key.Width</td>
                    <td>@key.Color</td>
                    <td>@key.Price</td>
                    <td>@key.Description</td>
                    <td>
                        <a href="@Url.Action("Edit", "Exhaust", new {id = key.Id})" class="viewDialog"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                        <a href="@Url.Action("Delete", "Exhaust", new {id = key.Id})" class="viewDialog"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="clearfix">
        Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
        <div id="contentPager">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
        <a class="card-link" href='javascript:history.go(-1)'><span class="fa fa fa-arrow-left"></span> На предыдущую страницу</a>
    </div>
</div>

<div id="mainModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="mainDialogContent">
            </div>
        </div>
    </div>
</div>

<script>
    $(document).on("click", "#contentPager a", function () {
        $.ajax({
            url: $(this).attr("href"),
            type: 'GET',
            cache: false,
            success: function (result) {
                $('#ajax-content').html(result);
            }
        });
        return false;
    });
    $(document).ready(function () {
        $(document).on("click", "#contentPager a[href]", function () {
            $.ajax({
                url: $(this).attr("href"),
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#ajax-content').html(result);
                }
            });
            return false;
        });
    });
</script>

<script>
    function CallChangefunc(val) {
        $('#ajax-content').load('@Url.Action("Index", "Exhaust")?value=' + val);
    }
</script>

<script src="~/assets/js/jquery-ui.min.js">
</script>
<script src="~/assets/js/modal.js"></script>